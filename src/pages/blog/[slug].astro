---
import { contentfulClient } from "../../api/blogs";
import BlogCard from "../../components/BlogCard.astro";
import Footer from "../../components/Footer.astro";
import Navbar from "../../components/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

const { slug } = Astro.params;
let post;
try {
  const data = await contentfulClient.getEntries({
    content_type: "pageBlogPost",
    "fields.slug": slug,
  });
  // console.log(data.items[0].fields.relatedBlogPosts.fields);
  const { title, publishedDate, content, featuredImage, relatedBlogPosts } =
    data.items[0].fields;
  post = {
    title,
    date: publishedDate,
    content: documentToHtmlString(content),
    image: featuredImage,
    relatedBlogPosts,
  };
} catch (error) {
  return Astro.redirect("/404");
}
// console.log(post);
---

<Layout title={post?.title as string} description={""}>
  <Navbar />
  <main class="py-24 mx-auto max-w-[80%] px-6 lg:px-8">
    <!-- <img
      src={post?.image.file.url}
      alt={post?.image.fileName}
      class="w-full h-[500px] object-cover"
    /> -->
    <section class="my-2">
      <div class="mx-auto text-base leading-7 text-gray-700">
        <p class="text-base font-semibold leading-7 text-indigo-600">
          Introducing
        </p>
        <h1
          class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
        >
          {post?.title}
        </h1>
        <div class="flex items-center gap-3">
          <p>Published on: {post?.date}</p>
        </div>
        <article set:html={post?.content} />
      </div>
      <!-- related blogs -->
      <!-- {
        post?.relatedBlogPosts
          ? post.relatedBlogPosts.fields.map((blog) => (
              <BlogCard
                title={blog.title}
                description={blog.shortDescription}
                slug={blog.slug}
                date={blog.date}
                image={blog.featuredImage}
              />
            ))
          : "Blog not found "
      } -->
    </section>
  </main>
  <Footer />
</Layout>
