---
import Layout from "@layouts/Layout.astro";
import CartSection from "@section/CartSection";
import OrderSection from "@section/OrderSection";
import Typography from "@components/Typography";
---

<Layout title="Cart" description="Cart page">
  <!-- <Navbar /> -->
  <main class="bg-white">
    <div
      class="mx-auto max-w-2xl px-4 pb-24 pt-16 sm:px-6 lg:max-w-7xl lg:px-8"
    >
      <Typography
        tag="h3"
        size="h3/bold"
        variant="primary"
        className=" mt-8 tracking-tight"
      >
        Shopping Cart
      </Typography>
      <div
        class="mt-12 lg:grid lg:grid-cols-12 lg:items-start lg:gap-x-12 xl:gap-x-16"
      >
        <CartSection client:load />
        <!-- Order summary -->
        <OrderSection client:load />
      </div>
    </div>
  </main>
  <!-- <Footer /> -->
</Layout>
