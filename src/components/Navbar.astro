---
import NavCartItem from "./NavCartItem";

const navLinks = [
  {
    title: "Products",
    description: "Explore product",
    link: "/products",
  },
  {
    title: "Services",
    description: "Services ",
    link: "#",
  },
  {
    title: "Workplace",
    description: "Work place",
    link: "#",
  },
  {
    title: "Designers",
    description: "Designers",
    link: "#",
  },
  {
    title: "Blog",
    description: "Blog",
    link: "/blog",
  },
];
---

<header class="absolute inset-x-0 top-0 z-10">
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Company</span>
        <img
          class="h-8 w-auto"
          src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
          alt=""
        />
      </a>
    </div>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
        id="open-menu"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      {
        navLinks.map((nav) => (
          <a
            href={nav.link}
            title={nav.description}
            class="text-sm font-semibold leading-6 text-gray-900"
          >
            {nav.title}
          </a>
        ))
      }
    </div>
    <div class="hidden lg:flex lg:items-center lg:flex-1 lg:justify-end">
      <a
        href="/signup"
        class="text-sm font-semibold leading-6 px-2 py-1 rounded-md bg-indigo-600 hover:bg-indigo-500 text-white"
      >
        Join Now
      </a>
      <!-- Cart -->
      <NavCartItem client:load />
    </div>
  </nav>
  {/* Mobile menu, show/hide based on menu open state. */}
  <div class="lg:hidden" role="dialog" aria-modal="true">
    {/* Background backdrop, show/hide based on slide-over state. */}

    <div
      class="fixed hidden inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
      id="nav-links"
    >
      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <img
            class="h-8 w-auto"
            src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
            alt=""
          />
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700"
          id="close-menu"
        >
          <span class="sr-only">Close menu</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            {
              navLinks.map((nav) => (
                <a
                  href={nav.link}
                  title={nav.description}
                  class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                >
                  {nav.title}
                </a>
              ))
            }
          </div>
          <div class="py-6">
            <a
              href="/signup"
              class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
            >
              Join Now
            </a>

            <!-- Cart -->
            <NavCartItem client:load />
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  const navLinks = document.getElementById("nav-links") as HTMLDivElement;
  const openMenu = document.getElementById("open-menu") as HTMLButtonElement;
  const closeMenu = document.getElementById("close-menu") as HTMLButtonElement;

  openMenu.addEventListener("click", () => {
    navLinks.style.display = "block";
  });
  closeMenu.addEventListener("click", () => {
    navLinks.style.display = "none";
  });
</script>
