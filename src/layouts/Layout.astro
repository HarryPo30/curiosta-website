---
import BaseHead from "@components/BaseHead.astro";
export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  darkBg?: boolean;
}
const { title, ogImage, description, darkBg } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} image={ogImage} description={description} />
  </head>
  <body>
    <slot />
  </body><style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    html,
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
        sans-serif;
    }
    .tooltip-placement-top {
      top: -200%; /* Adjust this value based on your design */
      transform-origin: bottom;
    }

    .tooltip-placement-right {
      left: 100%; /* Adjust this value based on your design */
      transform-origin: left;
    }

    .tooltip-placement-bottom {
      top: 100%; /* Adjust this value based on your design */
      transform-origin: top;
    }

    .tooltip-placement-left {
      right: 100%; /* Adjust this value based on your design */
      transform-origin: right;
    }

  </style>
</html>
